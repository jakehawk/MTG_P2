<h1><%= @deck.name %></h1>
by: <%= @deck.user.username %>

<hr>

<h4>Cards</h4>
<% if current_user %>
	<% if current_user.id == @deck.user.id %>
		<%= link_to "Edit", edit_deck_path(@deck)%>	
		<%= link_to "Delete", deck_path, method: :delete, data: {confirm: "Are you sure you want to delete this deck?"}%>	
	<% end %>
<% end %>
<br>
<% @deck.spells.each_slice(4).each do |row| %>
	<div class="row">
		<% row.each do |spell| %>
			<div class="col-md-3">
				<h4><%=spell.name%></h4>
				<img src="<%= spell.img_url %>" /> 
			</div>
		<% end %>
	</div>
<% end %>
<hr>

