<!DOCTYPE html>
<html>
  <head>
    <title>TestProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  </head>

  <body>
  	<% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <%= "Logged in as #{current_user.username.capitalize}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <!-- not logged in -->
      <%= link_to 'Home', root_path %> | <%= link_to 'Log In', new_session_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    <hr>

  	<% if notice %>
      <%= notice %>
    <% end %>

    <% if alert %>
      <%= alert %>
    <% end %>

		<div class="container">
		  <% flash.each do |key, value| %>
		    <div class="alert alert-<%= key %>">
		      <%= value %>
		    </div>
		  <% end %>
		  <div class="row">
		    <div class="col-md-12">
			    <%= yield %>
			  </div>
		  </div>
		</div>
		<hr>
		<%= params %>
  </body>
</html>
